<div id="users" class="">
  <% @users.each do |user| %>
      <div class="box panel panel-default">

        <div class="panel-body">
          <table border="0" width="80%" align="center">
            <tr>
              <td width="65%">
                <%= user.email %>
              </td>
              <td>
                <a href="<%= user.id %>" class="detalle_usuario btn btn-info btn-size" style="background-color: #1d89cf; border-color: #1d89cf;">Ver</a>&nbsp;
                <%= link_to 'Editar', users_edit_path(user), :class => "btn btn-info btn-size" %>&nbsp;
                <%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Desea eliminar este usuario?' },:class => "btn btn-info btn-size" %>

              </td>
            </tr>
          </table>
        </div>
      </div>
  <% end %>
</div>

<!-- modal de detalle -->
<div id="modal-detalle-usuario" class="modal fade" style="display: none;" role="dialog" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" style="z-index:1500; width: 750px;">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" aria-hidden="true" data-dismiss="modal" type="button">Ã—</button>
        <h4 class="modal-title">Detalle Usuario</h4>
      </div>
      <div class="modal-body usuario">

      </div>
    </div>
  </div>
</div>